@model prc391project.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="redirect" style="width: 100%; height: 50px;">
        @if (@ViewBag.role == false)
        {
            <a asp-action="Index" asp-controller="CourseClasses" class="form-control btn-primary" style="width: 100px; float: right;">Back to List</a>
        }
        @if (@ViewBag.role == true)
        {
            <a asp-action="TeacherIndex" asp-controller="Courses" class="form-control btn-primary" style="width: 100px; float: right;">Back to List</a>
        }
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="form-control btn-primary" style="width: 50px; float: right; margin-right: 10px;">Edit</a>
    </div>

<h1>Details</h1>

<div style="margin-left: 10%; margin-right: 10%;">
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @if (@ViewBag.role == false)
            {
                <div>Student</div>
            }
            @if (@ViewBag.role == true)
            {
                <div>Teacher</div>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
</div>
