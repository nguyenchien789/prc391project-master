@model prc391project.Models.CourseClass

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="redirect" style="width: 100%; height: 50px;">
    <a asp-action="TeacherIndex" class="form-control btn-primary" style="width: 100px; float: right;">Back to List</a>
</div>

<h2>Unenroll confirm</h2>

<div>
    <h4>CourseClass</h4>
    <hr />
    <div>
        <span class="control-label">Subject: </span>
        <span>@ViewBag.Subject</span>
    </div>
    <div>
        <span class="control-label">StartTime: </span>
        <span>@ViewBag.Start</span>
    </div>
    <div>
        <span class="control-label">EndTime: </span>
        <span>@ViewBag.End</span>
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Course.CourseId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Course.CourseId" />
        <input type="submit" value="Unenroll" class="btn btn-default" />
    </form>
</div>
